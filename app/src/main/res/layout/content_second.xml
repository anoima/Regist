<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg"
    android:layout_centerHorizontal="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anoim.regist.SecondActivity"
    >


    <TextView
        android:text="Successfully Registration!"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:textColor="@color/suc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_name"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/user_name"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/last_name"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/first_name"
        android:layout_alignLeft="@+id/first_name"
        android:layout_alignStart="@+id/first_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_password"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/last_name"
        android:layout_alignLeft="@+id/last_name"
        android:layout_alignStart="@+id/last_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_address"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/input_password"
        android:layout_alignLeft="@+id/input_password"
        android:layout_alignStart="@+id/input_password" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/email_address"
        android:layout_alignLeft="@+id/email_address"
        android:layout_alignStart="@+id/email_address" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/gender"
        android:layout_alignLeft="@+id/gender"
        android:layout_alignStart="@+id/gender" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/country"
        android:layout_alignLeft="@+id/country"
        android:layout_alignStart="@+id/country" />

    <TextView
        android:text="First Name:"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstname_tw"
        android:layout_alignTop="@+id/first_name"
        android:layout_alignLeft="@+id/username_tw"
        android:layout_alignStart="@+id/username_tw" />

    <TextView
        android:text="Last Name:"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastname_tw"
        android:layout_alignTop="@+id/last_name"
        android:layout_alignLeft="@+id/firstname_tw"
        android:layout_alignStart="@+id/firstname_tw" />

    <TextView
        android:text="Password:"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_tw"
        android:layout_alignTop="@+id/input_password"
        android:layout_alignLeft="@+id/lastname_tw"
        android:layout_alignStart="@+id/lastname_tw" />

    <TextView
        android:text="Email:"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_tw"
        android:layout_alignTop="@+id/email_address"
        android:layout_alignLeft="@+id/password_tw"
        android:layout_alignStart="@+id/password_tw" />

    <TextView
        android:text="Gender:"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender_tw"
        android:layout_alignTop="@+id/gender"
        android:layout_alignLeft="@+id/email_tw"
        android:layout_alignStart="@+id/email_tw" />

    <TextView
        android:text="Country:"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country_tw"
        android:layout_alignTop="@+id/country"
        android:layout_alignLeft="@+id/gender_tw"
        android:layout_alignStart="@+id/gender_tw" />

    <TextView
        android:text="Notification:"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_tw"
        android:layout_alignTop="@+id/notification"
        android:layout_alignLeft="@+id/country_tw"
        android:layout_alignStart="@+id/country_tw" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/notification_tw"
        android:layout_toEndOf="@+id/notification_tw" />

    <TextView
        android:text="Username:"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_tw"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/user_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/back"
        android:onClick="@+id/back"/>


</RelativeLayout>
